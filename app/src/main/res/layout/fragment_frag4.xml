<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.example.app.bloodbank.fragmant.frag4"
    tools:layout_editor_absoluteY="25dp">


    <EditText
        android:id="@+id/edName"
        android:layout_width="330dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1.2"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.262"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f_age" />

    <EditText
        android:id="@+id/f_age"
        android:layout_width="330dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1.2"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center"
        android:hint="Age"
        android:inputType="phone"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView2"

        android:layout_width="89dp"
        android:layout_height="29dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_weight=".8"
        android:gravity="center"
        android:text="Address"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edName" />

    <com.james602152002.floatinglabelspinner.FloatingLabelSpinner

        android:id="@+id/spinner22"

        android:layout_width="340dp"

        android:layout_height="64dp"


        android:layout_marginEnd="32dp"

        android:layout_marginLeft="32dp"

        android:layout_marginRight="32dp"

        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:j_fls_colorError="#ff0004"
        app:j_fls_colorHighlight="#0000FF"
        app:j_fls_error_anim_duration="8000"
        app:j_fls_error_horizontal_margin="2dp"
        app:j_fls_error_textSize="14sp"
        app:j_fls_error_vertical_margin="2dp"
        app:j_fls_float_anim_duration="800"

        app:j_fls_hint="Select City"
        app:j_fls_hint_textSize="16sp"
        app:j_fls_label_horizontal_margin="2dp"
        app:j_fls_label_textSize="14sp"
        app:j_fls_label_vertical_margin="2dp"
        app:j_fls_recursive="true"
        app:j_fls_textColorHint="#0000FF"
        app:j_fls_thickness="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <TextView

        android:id="@+id/textView4"
        android:layout_width="105dp"
        android:layout_height="36dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_weight=".8"
        android:gravity="center"

        android:text="BLOOD"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner22" />

    <com.james602152002.floatinglabelspinner.FloatingLabelSpinner

        android:id="@+id/address"

        android:layout_width="340dp"

        android:layout_height="64dp"


        android:layout_marginEnd="32dp"

        android:layout_marginLeft="32dp"

        android:layout_marginRight="32dp"

        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:j_fls_colorError="#ff0004"
        app:j_fls_colorHighlight="#0000FF"
        app:j_fls_error_anim_duration="8000"
        app:j_fls_error_horizontal_margin="2dp"
        app:j_fls_error_textSize="14sp"
        app:j_fls_error_vertical_margin="2dp"
        app:j_fls_float_anim_duration="800"
        app:j_fls_hint="Select Type Blood"

        app:j_fls_hint_textSize="16sp"
        app:j_fls_label_horizontal_margin="2dp"
        app:j_fls_label_textSize="14sp"
        app:j_fls_label_vertical_margin="2dp"
        app:j_fls_recursive="true"
        app:j_fls_textColorHint="#0000FF"
        app:j_fls_thickness="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


    <EditText
        android:id="@+id/edPhone"
        android:layout_width="290dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1.2"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center"
        android:hint="Phone"
        android:inputType="phone"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="330dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1.2"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edPhone">

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Private"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Public"
            android:textSize="24sp" />
    </RadioGroup>

    <Button
        android:id="@+id/updateee"
        android:layout_width="163dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_weight="2"
        android:shadowColor="#A80C0C"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="@string/Update"
        android:layout_marginBottom="7dp"
        android:textColor="#071cba"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/Bloodtype"
        android:layout_width="202dp"
        android:layout_height="36dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/spinner22" />

    <TextView
        android:id="@+id/addressCity"
        android:layout_width="187dp"
        android:layout_height="29dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/edName" />


</android.support.constraint.ConstraintLayout>
