<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen"
    android:background="@drawable/b_back"
    android:id="@+id/contentM">


    <GridLayout
        android:layout_width="299dp"
        android:layout_height="391dp"

        android:layout_marginEnd="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="116dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/Msearch"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="#ffffff"
            android:drawableTop="@drawable/ic_search_black"
            android:onClick="move_search_page"
            android:paddingTop="20dp"
            android:text="search"
            android:textColor="#030f80" />

        <Button
            android:id="@+id/Mform"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_columnWeight="1"

            android:layout_margin="10dp"

            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="#ffffff"
            android:drawableTop="@drawable/b_note"
            android:onClick="Mform"
            android:paddingTop="20dp"
            android:text="form"
            android:textColor="#030f80" />

        <Button
            android:id="@+id/Mfrind"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_columnWeight="1"

            android:layout_margin="10dp"

            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="#ffffff"
            android:drawableTop="@drawable/per"
            android:onClick="Mfrind"
            android:paddingTop="20dp"

            android:text="friends"
            android:textColor="#030f80" />

        <Button
            android:id="@+id/Maccept"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="#ffffff"
            android:drawableTop="@drawable/b_true"
            android:onClick="Maccept"
            android:paddingTop="20dp"

            android:text="accepted"
            android:textColor="#030f80" />

        <Button
            android:id="@+id/Mhowneed"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"

            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="#ffffff"
            android:drawableTop="@drawable/b_how"
            android:onClick="Mhowneed"
            android:paddingTop="20dp"

            android:text="who need"
            android:textColor="#030f80" />

        <Button
            android:id="@+id/Mdetails"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"

            android:layout_columnWeight="1"
            android:layout_margin="10dp"

            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="#ffffff"
            android:drawableTop="@drawable/b_qmark"
            android:onClick="Mdetails"
            android:paddingTop="20dp"

            android:text="my detalis"
            android:textColor="#030f80" />


    </GridLayout>




</android.support.constraint.ConstraintLayout>